<div class="d-flex min-vh-100 justify-content-center m-5">
  <div class="login-card">
      <h2 class="page-title d-flex my-2">Blog Post</h2>
      <form class="form signup-form">
        <div class="form-group">
          <label for="username-signup">Title:</label>
          <input class="form-input" type="text" id="username-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup">Post:</label>
          <textarea class="form-input" type="text" id="email-signup"></textarea>
        </div>
        <div class="form-group d-flex justify-content-center">
          <button class="btn btn-primary" type="submit">Create New Post</button>
        </div>
      </form>
    </div>
  </div>
</div>
